{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",

    "types": [
      "react",
      "react-native",
      "react-native-web"
    ],

    "lib": ["ESNext", "DOM"],
    "allowJs": true,

    "jsx": "react-jsx",

    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "ignoreDeprecations": "6.0"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/app/interact/index.tsx"
  ]
}